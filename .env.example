# Vision Dashboard Environment Variables
# Copy this file to .env and update the values

# Required: Secure session key (minimum 32 characters)
SESSION_SECRET=your-super-secure-session-key-here-minimum-32-chars

# Optional: Flask configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Optional: Custom port (default: 5000)
PORT=5000

# Optional: Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=30

# Optional: Database connection timeout (seconds)
DB_TIMEOUT=5

# Optional: URL request timeout (seconds)
URL_TIMEOUT=5